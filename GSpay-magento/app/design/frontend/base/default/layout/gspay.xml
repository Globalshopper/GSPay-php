<?xml version="1.0"?>
<layout version="0.1.0">
	<default>
        <reference name="head">
            <action method="addCss"><stylesheet>css/gspay/styles.css</stylesheet></action>
            <action method="addItem"><type>skin_js</type><name>js/nodisplaygspay.js</name></action>
        </reference>
		<reference name="header">
			<action method="setTemplate"><template>gspay/html/header.phtml</template></action>
		</reference>	
	</default>
	<gspay_payment_redirect>
		<reference name="root">
			<action method="setTemplate"><template>page/empty.phtml</template></action>
		</reference>
		<reference name="content">
            <block type="gspay/redirect" name="redirect" as="redirect" before="-" />
        </reference>
	</gspay_payment_redirect>
	
	
	<gspay_payment_start>
		<reference name="root">
			<action method="setTemplate"><template>page/empty.phtml</template></action>
		</reference>
		<reference name="content">
            <block type="gspay/start" name="start" as="start" before="-" />
        </reference>
	</gspay_payment_start>
	
	
	<gspay_payment_payinfo>
		<reference name="root">
			<action method="setTemplate"><template>page/empty.phtml</template></action>
		</reference>
		<reference name="content">
            <block type="gspay/chinapayredirect" name="chinapayredirect" as="chinapayredirect" before="-" />
        </reference>
	</gspay_payment_payinfo>
	
	<catalog_product_view>
		<reference name="product.info.addtocart">
			<action method="setTemplate"><template>gspay/product/view/addtocartgspay.phtml</template></action>
		</reference>
	</catalog_product_view>
	
	<checkout_cart_index translate="label">
		<reference name="checkout.cart.methods.onepage">
			<action method="setTemplate"><template>gspay/onepage/link.phtml</template></action>
		</reference>
	</checkout_cart_index>	
	
 
</layout> 